<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ui.main.profile.MyProfileEditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_SignUp_B"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_Edit_Back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/item_btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/contentDescription"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@+id/iv_Edit_Back"
                app:layout_constraintEnd_toEndOf="@+id/iv_Edit_Back"
                app:layout_constraintStart_toStartOf="@+id/iv_Edit_Back"
                app:layout_constraintTop_toTopOf="@+id/iv_Edit_Back"
                android:contentDescription="@string/contentDescription"/>

            <TextView
                android:id="@+id/tv_Edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/edit"
                android:textColor="@color/text"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_Edit_Back"
                app:layout_constraintStart_toEndOf="@id/iv_Edit_Back"
                app:layout_constraintTop_toTopOf="@id/iv_Edit_Back" />

            <ImageView
                android:id="@+id/iv_Edit_Photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/item_btn_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_Edit1"
                android:contentDescription="@string/contentDescription"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="35dp"
                android:background="@drawable/ic_photo"
                app:layout_constraintBottom_toBottomOf="@id/iv_Edit_Photo"
                app:layout_constraintEnd_toEndOf="@id/iv_Edit_Photo"
                app:layout_constraintStart_toStartOf="@id/iv_Edit_Photo"
                app:layout_constraintTop_toTopOf="@+id/iv_Edit_Photo"
                android:contentDescription="@string/contentDescription"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_Edit_Photo">

                <TextView
                    android:id="@+id/tv_Edit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/edit_name"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_Edit_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_edittext"
                    android:hint="@string/edit_name_text"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/hint"
                    android:textSize="18sp"
                    android:autofillHints="no"
                    android:inputType="textPersonName"
                    app:layout_constraintTop_toBottomOf="@id/tv_Edit2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@id/et_Edit_Name"
                    app:layout_constraintBottom_toBottomOf="@id/et_Edit_Name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/contentDescription"/>

                <TextView
                    android:id="@+id/tv_Edit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/edit_email"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_Edit_Name" />

                <EditText
                    android:id="@+id/et_Edit_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_edittext"
                    android:hint="@string/edit_email_text"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/hint"
                    android:textSize="18sp"
                    android:autofillHints="no"
                    android:inputType="textEmailAddress"
                    app:layout_constraintTop_toBottomOf="@id/tv_Edit3" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@+id/et_Edit_Email"
                    app:layout_constraintBottom_toBottomOf="@+id/et_Edit_Email"
                    app:layout_constraintEnd_toEndOf="@+id/et_Edit_Email"
                    android:contentDescription="@string/contentDescription"/>

                <TextView
                    android:id="@+id/tv_Edit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/edit_intro"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_Edit_Email" />

                <EditText
                    android:id="@+id/et_Edit_Intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_edittext"
                    android:hint="@string/edit_intro_text"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/text"
                    android:textColorHint="@color/hint"
                    android:textSize="18sp"
                    android:autofillHints="no"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/tv_Edit4" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@+id/et_Edit_Intro"
                    app:layout_constraintBottom_toBottomOf="@+id/et_Edit_Intro"
                    app:layout_constraintEnd_toEndOf="@+id/et_Edit_Intro"
                    android:contentDescription="@string/contentDescription"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_SignUp_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/item_btn_ripple"
            android:padding="12dp"
            android:text="@string/edit_confirm"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>