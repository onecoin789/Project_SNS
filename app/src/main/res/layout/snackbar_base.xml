<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/item_radius_5"
        android:backgroundTint="@color/dialog_bg"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSnackBarMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/test"
            android:textColor="@color/text"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvSnackBarClose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvSnackBarClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/close"
            android:textColor="@color/dialog_point"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tvSnackBarMain"
            app:layout_constraintBottom_toBottomOf="@id/tvSnackBarMain"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>