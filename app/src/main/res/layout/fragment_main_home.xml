<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ui.view.main.home.MainHomeFragment">


    <ImageView
        android:id="@+id/ivHomeDM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/contentDescription"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeDM"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHomeRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/home_today"
                android:textColor="@color/text"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRecommendFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/item_tab_background"
                app:layout_constraintTop_toBottomOf="@+id/tvHomeRecommend">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomeLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/clHomeMiddle"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHomeLowFrame"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/item_edittext"
                        android:backgroundTint="@color/white"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_low"
                            android:contentDescription="@string/contentDescription"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_low"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/clHomeLowFrame"
                        app:layout_constraintStart_toStartOf="@+id/clHomeLowFrame"
                        app:layout_constraintTop_toBottomOf="@+id/clHomeLowFrame" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomeMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/clHomeLow"
                    app:layout_constraintEnd_toStartOf="@+id/clHomeHigh"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/clHomeLow"
                    app:layout_constraintTop_toTopOf="@+id/clHomeLow">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHomeMiddleFrame"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/item_edittext"
                        android:backgroundTint="@color/white"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_middle"
                            android:contentDescription="@string/contentDescription"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_middle"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/clHomeMiddleFrame"
                        app:layout_constraintStart_toStartOf="@+id/clHomeMiddleFrame"
                        app:layout_constraintTop_toBottomOf="@+id/clHomeMiddleFrame" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clHomeHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/clHomeMiddle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/clHomeMiddle"
                    app:layout_constraintTop_toTopOf="@+id/clHomeMiddle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHomeHighFrame"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/item_edittext"
                        android:backgroundTint="@color/white"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_high"
                            android:contentDescription="@string/contentDescription"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_high"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/clHomeHighFrame"
                        app:layout_constraintStart_toStartOf="@+id/clHomeHighFrame"
                        app:layout_constraintTop_toBottomOf="@+id/clHomeHighFrame" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="70dp"
                android:nestedScrollingEnabled="false"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clRecommendFrame"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp"
                tools:listitem="@layout/rv_item_post_photo"/>

            <ProgressBar
                android:id="@+id/pbHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvHome"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>