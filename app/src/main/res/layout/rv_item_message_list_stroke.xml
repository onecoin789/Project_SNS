<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_Item_List_S_T"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_list_point"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_Item_List_Profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_user_fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/contentDescription"/>

        <TextView
            android:id="@+id/tv_Item_List_S_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_Item_List_Profile"
            app:layout_constraintTop_toTopOf="@+id/iv_Item_List_Profile"
            app:layout_constraintBottom_toBottomOf="@+id/iv_Item_List_Profile"/>

        <TextView
            android:id="@+id/tv_Item_List_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_time"
            android:textColor="@color/hint"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_Item_List_S_Name"
            app:layout_constraintStart_toStartOf="@id/tv_Item_List_S_Name"/>

        <TextView
            android:id="@+id/tv_Item_List_S_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_Item_List_S"
            app:layout_constraintTop_toTopOf="@id/tv_Item_List_S"
            app:layout_constraintBottom_toBottomOf="@id/tv_Item_List_S"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>