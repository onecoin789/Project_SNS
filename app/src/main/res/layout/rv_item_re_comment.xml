<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemReComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivReComment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="@drawable/item_profile"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvItemReCommentName"
            android:contentDescription="@string/contentDescription"/>

        <TextView
            android:id="@+id/tvItemReCommentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/text"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvItemReComment"
            app:layout_constraintStart_toEndOf="@id/ivReComment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvItemReCommentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tvItemReCommentName"
            app:layout_constraintTop_toTopOf="@+id/tvItemReCommentName"
            app:layout_constraintBottom_toBottomOf="@id/tvItemReCommentName"/>

        <TextView
            android:id="@+id/tvItemReComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvItemReCommentEdit"
            app:layout_constraintStart_toStartOf="@+id/tvItemReCommentName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemReCommentName" />

        <TextView
            android:id="@+id/tvItemReCommentEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_comment_edit"
            android:textColor="@color/hint"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvItemReComment"
            app:layout_constraintTop_toBottomOf="@+id/tvItemReComment" />

        <TextView
            android:id="@+id/tvItemReCommentDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_comment_delete"
            android:textColor="@color/hint"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/tvItemReCommentEdit"
            app:layout_constraintTop_toTopOf="@id/tvItemReCommentEdit"
            app:layout_constraintBottom_toBottomOf="@id/tvItemReCommentEdit"/>


        <ImageView
            android:id="@+id/ivItemReCommentHeart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_heart"
            app:layout_constraintBottom_toBottomOf="@id/tvItemReCommentEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvItemReCommentName"
            android:contentDescription="@string/contentDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>