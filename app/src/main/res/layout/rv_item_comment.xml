<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_Comment_T"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_list"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_Comment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_user_fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/contentDescription"/>

        <TextView
            android:id="@+id/tv_Item_Comment_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_Item_Comment_Email"
            app:layout_constraintStart_toEndOf="@id/iv_Comment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_Item_Comment_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Item_Comment_Re"
            app:layout_constraintStart_toStartOf="@+id/tv_Item_Comment_Name"
            app:layout_constraintTop_toBottomOf="@+id/tv_Item_Comment_Name" />

        <TextView
            android:id="@+id/tv_Item_Comment_Re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_comment"
            android:textColor="@color/hint"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_Item_Comment_Email"
            app:layout_constraintTop_toBottomOf="@+id/tv_Item_Comment_Email" />

        <TextView
            android:id="@+id/tv_Item_Comment_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_delete"
            android:textColor="@color/hint"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/tv_Item_Comment_Re"
            app:layout_constraintTop_toTopOf="@id/tv_Item_Comment_Re"
            app:layout_constraintBottom_toBottomOf="@id/tv_Item_Comment_Re"/>


        <ImageView
            android:id="@+id/iv_Item_Comment_Heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_heart"
            app:layout_constraintBottom_toBottomOf="@id/tv_Item_Comment_Re"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Item_Comment_Name"
            android:contentDescription="@string/contentDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>